@model IEnumerable<BulkeyModels.Models.Domain.Catagory>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Catagory List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Catagory" asp-action="Create">
                <i class="bi bi-bag-plus-fill"></i> Create New Catagory
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped py-5">
    <thead>
        <tr>
            <td><b>Catagory ID</b></td>
            <td><b>Name</b></td>
            <td><b>DisplayOrder</b></td>
            <td>   </td>

        </tr>
    </thead>
    <tbody>
        @foreach (var catagory in Model.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td>@catagory.ID</td>
                <td>@catagory.Name</td>
                <td>@catagory.DisplayOrder</td>
                <td>
                    <a asp-controller="Catagory" asp-action="Edit" asp-route-id="@catagory.ID" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>